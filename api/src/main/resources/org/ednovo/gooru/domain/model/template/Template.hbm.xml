<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.ednovo.gooru.core.api.model.Template" table="template">
	    <cache usage="read-only" />
		<id name="gooruOid" column="template_uid" unsaved-value="null">
			<generator class="org.ednovo.gooru.core.application.util.UUIDGenerator" />
		</id>
		<property name="htmlContent" column="html_content" not-null="true" />
		<property name="textContent" column="text_content" not-null="true" />
		<property name="templateContent" column="template_content" not-null = "false"/>
		<property name="subject" column="subject" not-null="true" />
		<many-to-one name="creator" class="org.ednovo.gooru.core.api.model.User" column="creator_uid" not-null="false" lazy="proxy" cascade="none" />
		<many-to-one name="organization" class="org.ednovo.gooru.core.api.model.Organization" column="organization_uid" not-null="true" lazy="proxy" cascade="none" />
		<property name="createdDate" column="created_date" not-null="true" />
	</class>
</hibernate-mapping>

